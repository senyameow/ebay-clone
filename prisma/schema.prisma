generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Addresses {
  id        Int     @id @default(autoincrement())
  user_id   String  @unique @db.Uuid
  name      String
  address   String
  zipcode   String
  city      String
  country   String
  created_at DateTime? @default(now()) @db.Timestamptz(6)
}

model Orders {
  id        Int     @id @default(autoincrement())
  user_id   String  @unique @db.Uuid
  name      String
  address   String
  zipcode   String
  city      String
  country   String
  total     Int
  created_at DateTime? @default(now()) @db.Timestamptz(6)
  // orderItem OrderItem[] // 1 to many rel
}
